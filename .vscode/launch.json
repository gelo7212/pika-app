    "version": "0.2.0",
    "configurations": [
        {
            "name": "Local",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
                "--dart-define-from-file",
                "configs/.env",
                "--web-port=8000"
            ]
        },
        {
            "name": "Development",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
                "--dart-define-from-file",
                "configs/dev.env"
            ]
        },
        {
            "name": "Production",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
                "--dart-define-from-file",
                "configs/production.env"
            ]
        },
        {
            "name": "esbi_app",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "esbi_app (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "esbi_app (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--dart-define-from-file",
                "configs/production.env"
            ]
        }
    ]
}